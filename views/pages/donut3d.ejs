<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<style>
path.slice{
	stroke-width:2px;
}
polyline{
	opacity: .3;
	stroke: black;
	stroke-width: 2px;
	fill: none;
} 
svg text.percent{
	fill:white;
	text-anchor:middle;
	font-size:12px;
}

</style>
<body>
<div class="container">
	<div class="title">
		ACT Usage
	</div>

	<div class="chart">
		
	</div>
	<div class="details">
		<table>
			<tr><td>Used :</td><td><%= used%> GB</td></tr>
			<tr style="color:#FFF;"><td>Unused :</td><td><%= unused%> GB </td></tr>
			<tr style="color:#FFF;"><td>Total :</td><td><%= total%> GB</td></tr>
		</table>
		
	</div>
</div>
 <% include ../partials/footer %>
<script src="http://d3js.org/d3.v3.min.js"></script>
<script>

var salesData=[
	{label:"Used", color:"#F3843E"},
	{label:"Unused", color:"#6E6E6E"}
];

var svg = d3.select(".chart").append("svg").attr("width",300).attr("height",300);

svg.append("g").attr("id","usageDonut");

Donut3D.draw("usageDonut", getData(), 150, 150, 130, 100, 30, 0.4);

function getData(){
	return [
		{label:'Used', value: "<%= used %>", color: "#F3843E" },
		{label:'Unused', value: "<%= unused %>", color: "#6E6E6E" }
	]
}
</script>
      
</body>
</html>