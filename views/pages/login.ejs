<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">
	<div class="title">
		ACT Usage
	</div>
	<div class="title">
		Login
	</div>
	<div class="form">
		<form method="POST" action="/">
			<div class="username element">
				<input class="input" type="text" onblur="toggleActive(this)" onfocus="toggleActive(this)" name="webuser" id="name" placeholder="Enter your username"/>		
			</div>
			<div class="password element">
				<input class="input" type="password"  onblur="toggleActive(this)" onfocus="toggleActive(this)" name="pwd" id="pwd" placeholder="Enter your password"/>	
			</div>
			<div class="submit element">
				<input class="submit-button" type="submit" name="Submit" value="Submit"  />	
			</div>
		</form>
	</div>
	<div class="message">
		<% if (typeof message !== 'undefined') { %>
			<%= message %>
		<% } %>

	</div>

    <% include ../partials/footer %>
    
</body>
</html>